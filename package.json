{
  "name": "mfe-shop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "shell": "pnpm --filter shell dev",
    "products": "pnpm --filter products dev",
    "cart": "pnpm --filter cart dev",
    "all": "concurrently \"pnpm --filter products dev\" \"pnpm --filter cart dev\" \"pnpm --filter shell dev\"",
    "all_with_preview": "concurrently \"pnpm --filter products preview\" \"pnpm --filter cart preview\" \"pnpm --filter shell dev\"",
    "lint": "eslint \"./packages/**/*.{js,ts,vue}\" --ext .js,.ts,.vue",
    "lint:fix": "eslint \"./packages/**/*.{js,ts,vue}\" --ext .js,.ts,.vue --fix",
    "format": "prettier --write \"./**/*.{js,ts,vue,json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "firebase": "^12.4.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
